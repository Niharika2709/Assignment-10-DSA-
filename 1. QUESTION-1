 1. Write  a  program  to  represent  a  graph  using  adjacency  matrix/list  and  perform  basic  
 operations like degree (in/out) of a vertex, adjacent vertices, number of edges, etc.


#include <iostream>
#include <vector>
using namespace std;

class Graph {
private:
    int V;
    vector<vector<int>> adjMatrix;
    vector<vector<int>> adjList;
    bool directed;

public:
    Graph(int vertices, bool isDirected = false) {
        V = vertices;
        directed = isDirected;

        adjMatrix.resize(V, vector<int>(V, 0));
        adjList.resize(V);
    }

   
    void addEdge(int u, int v) {
        adjMatrix[u][v] = 1;
        adjList[u].push_back(v);

        if (!directed) {
            adjMatrix[v][u] = 1;
            adjList[v].push_back(u);
        }
    }

    void printAdjMatrix() {
        cout << "\nAdjacency Matrix:\n";
        for (int i = 0; i < V; i++) {
            for (int j = 0; j < V; j++)
                cout << adjMatrix[i][j] << " ";
            cout << endl;
        }
    }

  
    void printAdjList() {
        cout << "\nAdjacency List:\n";
        for (int i = 0; i < V; i++) {
            cout << i << " -> ";
            for (int x : adjList[i])
                cout << x << " ";
            cout << endl;
        }
    }

    int outDegree(int vertex) {
        return adjList[vertex].size();
    }

  
    int inDegree(int vertex) {
        int count = 0;
        for (int i = 0; i < V; i++)
            for (int v : adjList[i])
                if (v == vertex)
                    count++;
        return count;
    }

   
    void printAdjacentVertices(int vertex) {
        cout << "Adjacent vertices of " << vertex << ": ";
        for (int v : adjList[vertex])
            cout << v << " ";
        cout << endl;
    }

   
    int numberOfEdges() {
        int edges = 0;
        for (int i = 0; i < V; i++)
            edges += adjList[i].size();

        if (!directed)
            edges /= 2;

        return edges;
    }
};

int main() {
    int vertices = 5;


    Graph g(vertices, false); 

    g.addEdge(0, 1);
    g.addEdge(0, 4);
    g.addEdge(1, 2);
    g.addEdge(1, 3);
    g.addEdge(1, 4);
    g.addEdge(2, 3);
    g.addEdge(3, 4);

    g.printAdjMatrix();
    g.printAdjList();

    cout << "\nOut-degree of vertex 1: " << g.outDegree(1);
    cout << "\nIn-degree of vertex 3: " << g.inDegree(3);

    cout << "\n";
    g.printAdjacentVertices(1);

    cout << "Total number of edges: " << g.numberOfEdges() << endl;

    return 0;
}

