6. Write a program to implement Dijkstra's shortest path algorithm.


#include <iostream>
#include <climits>
using namespace std;

#define V 100    

int minDistance(int dist[], bool visited[], int n) {
    int minVal = INT_MAX, minIndex;

    for (int v = 0; v < n; v++) {
        if (!visited[v] && dist[v] <= minVal) {
            minVal = dist[v];
            minIndex = v;
        }
    }
    return minIndex;
}

void dijkstra(int graph[][100], int n, int src) {
    int dist[n];
    bool visited[n];


    for (int i = 0; i < n; i++) {
        dist[i] = INT_MAX;
        visited[i] = false;
    }

    dist[src] = 0;

    for (int count = 0; count < n - 1; count++) {
        int u = minDistance(dist, visited, n);
        visited[u] = true;

        for (int v = 0; v < n; v++) {
            if (!visited[v] && graph[u][v] != 0 &&
                dist[u] != INT_MAX &&
                dist[u] + graph[u][v] < dist[v]) 
            {
                dist[v] = dist[u] + graph[u][v];
            }
        }
    }

  
    cout << "\nShortest distances from source " << src << ":\n";
    for (int i = 0; i < n; i++) {
        cout << "Vertex " << i << " â†’ Distance = " << dist[i] << endl;
    }
}

int main() {
    int n, src;
    cout << "Enter number of vertices: ";
    cin >> n;

    int graph[100][100];

    cout << "Enter adjacency matrix (0 if no edge):\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cin >> graph[i][j];
        }
    }

    cout << "Enter source vertex: ";
    cin >> src;

    dijkstra(graph, n, src);

    return 0;
}
